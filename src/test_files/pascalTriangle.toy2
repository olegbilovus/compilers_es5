% https://www.programiz.com/c-programming/examples/pyramid-pattern %
% stampa il Triangolo di Pascal
  per input 6, stamper√†:

            1
           1    1
          1    2    1
         1    3    3    1
        1    4    6    4    1
       1    5   10   10    5    1
%

proc main():
  var rows: integer;
  coef ^= 1; i ^= 0;\
  <-- "Enter the number of rows" $(rows);

  while i < rows do
    printSpaces(rows - i);
    var j ^= 0;\
    while j <= i do
      if j = 0 || i = 0 then
        coef ^= 1;
      else
        coef ^= coef * (i - j + 1) / j;
      endif;
      printSpaces(4 - (coef / 10) );
      --> $(coef);
      j ^= j + 1;
    endwhile;
    -->!;
    i ^= i + 1;
  endwhile;

endproc

proc printSpaces(n: integer):
  while n > 0 do
    --> " ";
    n ^= n - 1;
  endwhile;
endproc
